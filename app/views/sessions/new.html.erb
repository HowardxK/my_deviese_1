<h1 class="title">LOG IN</h1>
<hr>
<%= form_for(:session, url: login_path) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", class: 'input is-medium' %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "Password", class: 'input is-medium' %>
  </div>
  <hr>
  <%= f.submit "Log In", class: 'button is-dark is-medium' %>
<% end %>