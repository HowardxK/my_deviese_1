<h1 class="title">登入才看得到</h1>
<hr>

<% if current_user %>
  <div class="field is-size-2 has-text-dark">
    目前登入帳號：<%= current_user.email %>
  </div>
  <div class="field">
    <%= link_to "Log Out", logout_path, method: 'delete', class: 'button is-danger is-medium' %>
  </div>
<% else %>
  redirect_to root_path
<% end %>